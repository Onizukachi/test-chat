<% flash.each do |key, value| %>
  <div class="bg-green-200 px-6 py-4 mb-4 rounded-md text-lg flex justify-between items-center mx-auto max-w-lg" 
              data-controller='flash-message' data-flash-message-target='flash'>
    <div class='flex items-center justify-start'>
      <svg viewBox="0 0 24 24" class="text-green-600 %> w-5 h-5 sm:w-5 sm:h-5 mr-3">
        <path fill="currentColor"
              d="M12,0A12,12,0,1,0,24,12,12.014,12.014,0,0,0,12,0Zm6.927,8.2-6.845,9.289a1.011,1.011,0,0,1-1.43.188L5.764,13.769a1,1,0,1,1,1.25-1.562l4.076,3.261,6.227-8.451A1,1,0,1,1,18.927,8.2Z">
        </path>
      </svg>
     
      
      <span class="text-green-800 ml-3"><%= value %></span>
    </div>
    
    <button type="button" data-action="click->flash-message#close" class="ml-5 bg-green-200 text-green-500 rounded-lg focus:ring-2 p-1.5 hover:bg-green-400 inline-flex items-center justify-center h-6 w-6">
      <span class="sr-only">Close</span>
      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
      </svg>
    </button>
  </div>
<% end %>